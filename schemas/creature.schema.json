  "required": [
    "abilityScores",
    "actions",
    "alignment",
    "ac",
    "conditionImmunities",
    "conditionResistances",
    "conditionVulnerabilities",
    "cr",
    "creatureType",
    "damageImmunities",
    "damageResistances",
