        "persuasion": {
          "$ref": "skill.schema.json"
        },
        "religion": {
          "$ref": "skill.schema.json"
        },
        "sleightOfHand": {
          "$ref": "skill.schema.json"
        },
        "stealth": {
          "$ref": "skill.schema.json"
        },
        "survival": {
          "$ref": "skill.schema.json"
        }
