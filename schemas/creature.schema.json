{
  "$id": "/schemas/creature",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Creature",
  "type": "object",
  "properties": {
    "abilityScores": {
      "type": "object",
      "properties": {
        "str": {
          "$ref": "abilityScore.schema.json"
        },
        "dex": {
          "$ref": "abilityScore.schema.json"
        },
        "con": {
          "$ref": "abilityScore.schema.json"
        },
        "int": {
          "$ref": "abilityScore.schema.json"
