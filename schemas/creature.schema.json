    "speed": {
      "type": "array",
      "items": {
        "$ref": "speed.schema.json"
      }
    },
    "spellSlots": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "spellLists": {
      "type": "array",
      "items": {
