        "str",
        "dex",
        "con",
        "int",
        "wis",
        "cha"
      ]
    },
    "ac": {
      "type": "number"
    },
    "actions": {
      "type": "array",
      "items": {
        "$ref": "action.schema.json"
      }
    },
    "alignment": {
      "$ref": "alignment.schema.json"
    },
    "conditionImmunities": {
      "type": "array",
      "items": {
