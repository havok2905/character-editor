        "$ref": "feature.schema.json"
      }
    },
    "hitPoints": {
      "$ref": "hitPoints.schema.json"
    },
    "languages": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "language.schema.json"
          },
          {
            "type": "string"
